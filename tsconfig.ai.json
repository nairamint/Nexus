{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/ai",
    "rootDir": "./src/ai",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/ai/**/*"
  ],
  "exclude": [
    "src/ai/**/*.test.ts",
    "src/ai/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
